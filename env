export APPLICATION_NAME=$APPLICATION_NAME
export APPLICATION_DIR=$APPLICATION_DIR
export APPLICATION_DATA_DIR=$APPLICATION_DATA_DIR
export APPLICATION_LOG_DIR=$APPLICATION_LOG_DIR
export HOME="$APPLICATION_DIR"

export GEMSTONE_INSTALLATION=$GEMSTONE_INSTALLATION
export GEMSTONE_USER="$GEMSTONE_USER"

export GEMSTONE_NAME="$APPLICATION_NAME"
export GEMSTONE_SYS_CONF="$APPLICATION_ETC_DIR/system.conf"
export GEMSTONE_EXE_CONF="$APPLICATION_ETC_DIR/gem.conf"
export GEMSTONE_DATADIR="$APPLICATION_DATA_DIR"
export GEMSTONE_LOGDIR="$APPLICATION_LOG_DIR"

export GEMSTONE="$GEMSTONE_INSTALLATION"
export GEMSTONE_KEYFILE="$GEMSTONE_INSTALLATION/seaside/etc/gemstone.key"
export DYLD_LIBRARY_PATH="$GEMSTONE_INSTALLATION/lib:\$DYLD_LIBRARY_PATH"
export LD_LIBRARY_PATH="$GEMSTONE_INSTALLATION/lib:\$LD_LIBRARY_PATH"
export PATH="$GEMSTONE_INSTALLATION/bin:$GEMSTONE_INSTALLATION/seaside/bin:$APPLICATION_DIR/bin:\$PATH"

